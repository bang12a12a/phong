    <script type='text/javascript'>
        jQuery(document).ready(function () {
            $('#txtSearchSanPham').keypress(function (event) {
                if (event.keyCode == 13 || event.which == 13) {
                    var textsearch = $('#txtSearchSanPham').val();
                    window.location.href = '/SanPhamNguoiDung/Index?text=' + textsearch;
                }
            });
            $('#search_sanphamnguoidung').click(function () {
                var textsearch = $('#txtSearchSanPham').val();
                window.location.href = '/SanPhamNguoiDung/Index?text=' + textsearch;
            });
            function clearTextBox() {
                $('#email-dangky').val("");
                $('#password-dangky').val("");
                $('#confirmpassword-dangky').val("");
                $('#yourname-dangky').val("");
            }
            function validate() {
                var password = $('#password-dangky').val();
                var isValid = true;
                if ($('#email-dangky').val() == "") {
                    $('#email-dangky').css('border-color', 'Red');
                    isValid = false;
                }
                else {
                    $('#email-dangky').css('border-color', 'lightgrey');
                }

                if ($('#password-dangky').val() == "") {
                    $('#password-dangky').css('border-color', 'Red');
                    isValid = false;
                }
                else {
                    $('#password-dangky').css('border-color', 'lightgrey');
                }



                if ($('#confirmpassword-dangky').val() == "" || $('#confirmpassword-dangky').val() != password) {
                    $('#confirmpassword-dangky').css('border-color', 'Red');
                    isValid = false;
                }
                else {
                    $('#confirmpassword-dangky').css('border-color', 'lightgrey');
                }

                if ($('#yourname-dangky').val() == "") {
                    $('#yourname-dangky').css('border-color', 'Red');
                    isValid = false;
                }
                else {
                    $('#yourname-dangky').css('border-color', 'lightgrey');
                }


                return isValid;
            }

            $('#btn-dangnhap').click(function () {
                $('#loading-dangnhap').show();
                var empObj = {
                    Email: $('#email-dangnhap').val(),
                    MatKhau: $('#password-dangnhap').val(),
                };
                $.ajax({

                    url: "/Login/Login/",
                    data: JSON.stringify(empObj),
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        if (result == 0) {
                            $('#thongbao-dangnhap').text('Email or password is incorrect');
                        }
                        else {
                            window.location.href = '/HomeNguoiDung/Index';
                        }

                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });

            });
            $('#btn-dangky').click(function () {
                var res = validate();
                if (res == false) {
                    return false;
                }
                var empObj = {
                    TenDangNhap: $('#email-dangky').val(),
                    HoTen: $('#yourname-dangky').val(),
                    MatKhau: $('#password-dangky').val(),
                    Email: $('#email-dangky').val(),
                };

                $.ajax({

                    url: "/Login/SignUp/",
                    data: JSON.stringify(empObj),
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        if (result == 0) {
                            $('#thongbao-dangky').text('Email already exists');
                        }
                        else {
                            window.location.href = '/HomeNguoiDung/Index';
                        }

                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });

            });



        });
    </script>
